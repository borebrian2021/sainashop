@model SHOP_DECOMPILED.Models.Fuel_category

@{
    ViewData["Title"] = "Modify fuel";
    Layout = "~/Views/Shared/fuel_layout.cshtml";
}
<div class="container-fluid w3-card p-3 bg-white">
    <table>
        <tr>
            <td class="pr-3"><img src="~/fuel_icons/fuel_station.png" class="logo_card" /></td>
            <td class="pl-3 border_left">
                <h5>Modify fuel | @Html.DisplayFor(model => model.Fuel_names)</h5>


            </td>
        </tr>
    </table>

</div>

<p>
    <a class="btn btn-sm bg-white w3-card mt-2" asp-action="index">
        <i class="fa fa-home"></i>&nbsp;Home
    </a>
</p>

<div class="w3-card p-3 bg-white p2">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <input type="hidden" asp-for="Station_id" />
                <div class="group">


                    <select asp-for="Fuel_names" class="form-control">
                        <option value="Super">Super</option>

                        <option value="Diesel">Diesel</option>

                    </select>
                    <span class="highlight"></span>
                    <span asp-validation-for="Fuel_names" class="bar"></span>


                </div>
                <div class="group">

                    <input asp-for="Tank_capacity" class="form-control" />
                    <span class="highlight"></span>
                    <span asp-validation-for="Tank_capacity" class="bar"></span>
                    <label asp-for="Tank_capacity"></label>


                </div>
                <div class="group">

                    <input asp-for="Current_quantity" class="form-control" />
                    <span class="highlight"></span>
                    <span asp-validation-for="Current_quantity" class="bar"></span>
                    <label asp-for="Current_quantity"></label>


                </div>
                <div class="group">

                    <input asp-for="Price" class="form-control" />
                    <span class="highlight"></span>
                    <span asp-validation-for="Price" class="bar"></span>
                    <label asp-for="Price"></label>


                </div>




                <div class="form-group">
                    @*<input type="submit" value="Create" class="btn btn-default" />*@
                    <button type="submit" class="btn btn-white bg-white w3-card"><i class="fa fa-cloud-upload" aria-hidden="true"></i> &nbsp;Submit</button>

                </div>
            </form>
        </div>
    </div>
    </div>
    <div>
        @*<a asp-action="Index">Back to List</a>*@
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
