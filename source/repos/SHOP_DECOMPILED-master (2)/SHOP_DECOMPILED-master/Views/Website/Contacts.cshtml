
@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}

 <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Contact</h2>
          <ol>
            <li><a href="/website/index">Home</a></li>
            <li>Contact</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">

        <div>
         <div class="mapouter"><div ><iframe style="border:0; width: 100%; height: 350px; border-radius:5px !important;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;" id="gmap_canvas" src="https://maps.google.com/maps?q=Iten%20agusto%20filing%20station&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><br><style></style></div></div>     </div>

        <div class="row mt-5">

          <div class="col-lg-4">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>Iten(Home of Champion) </p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>agustotech18@gmail.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+254722639467</p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">
  <form asp-action="send_quotation"  role="form">
                <h5 class="mb-3">Please fill in the foollowing form:</h5>

              <div class="row">
                <div class="col-md-6 form-group">
                     <label>Enter Full Name:</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                     <label>Enter email:</label>
                  <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                </div>
              </div>
              <div class="form-group mt-3">
                  <label>Enter Phone number:</label>

                <input type="text" class="form-control mt-3" name="phone" id="subject" placeholder="Subject" value="+254" required>
              </div> 
             
              <div class="form-group mt-3">
                  <label>Message (Optional):</label>

                <textarea class="form-control" name="message_" rows="5" placeholder="Message(Optional)" ></textarea>
              </div>
              <div class="my-3">
                
                <div class="sent-message">@{@TempData["message"]}</div>
              </div>
              <div ><button type="submit" class="send">Send Message</button></div>
            </form>


          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->
